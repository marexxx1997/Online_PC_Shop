@using OnlineShop.Data.ViewComponents

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineShop.styles.css" asp-append-version="true" />
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
     <script src="https://kit.fontawesome.com/8fdb7660ad.js" crossorigin="anonymous"></script>
</head>
<body style="background-color:snow">
    <header>
        
        <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-light bg-blue border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">PC SHOP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-md-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-0">
                        <li class="navbar-nav flex-grow-1">
                            <a class="nav-link text-white" asp-controller="Laptops" asp-action="Index">LAPTOPI</a>
                        </li>
                        <li class="navbar-nav flex-grow-1">
                            <a class="nav-link text-white" asp-controller="Laptops" asp-action="GetAllPC">RAČUNARI</a>
                        </li>
                        <li class="navbar-nav flex-grow-1 dropdown">
                            <a class="nav-link text-white dropdown-toggle" href="#" id="navbarEquipDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">PC KOMPONENTE I OPREMA</a>
                            <div class="dropdown-menu" style="width: -webkit-fill-available;" aria-labelledby="navbarEquipDropdown">
                                <a class="dropdown-item text-black" style="font-weight:500;">
                                    PC KOMPONENTE
                                </a>
                                <ul>
                                    <li>
                                        <a asp-controller="Components" asp-action="Index" asp-route-ComponentsTypesId="6" class="dropdown-item text-black px-0">
                                            Matične ploče
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Components" asp-action="Index" asp-route-ComponentsTypesId="7" class="dropdown-item text-black px-0">
                                            Monitori
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Components" asp-action="Index" asp-route-ComponentsTypesId="8" class="dropdown-item text-black px-0">
                                            Grafičke kartice
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Components" asp-action="Index" asp-route-ComponentsTypesId="9" class="dropdown-item text-black px-0">
                                            Kućišta
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Components" asp-action="Index" asp-route-ComponentsTypesId="10" class="dropdown-item text-black px-0">
                                            HDD i SDD
                                        </a>
                                    </li>
                                </ul>
                                <a class="dropdown-item text-black" style="font-weight:500;">
                                    PERIFERIJA
                                </a>
                                <ul>
                                    <li>
                                        <a asp-controller="Components" asp-action="Index" asp-route-ComponentsTypesId="1" class="dropdown-item text-black px-0">
                                            Tastature
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Components" asp-action="Index" asp-route-ComponentsTypesId="3" class="dropdown-item text-black px-0">
                                            Miševi
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Components" asp-action="Index" asp-route-ComponentsTypesId="2" class="dropdown-item text-black px-0">
                                            Zvučnici
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Components" asp-action="Index" asp-route-ComponentsTypesId="4"  class="dropdown-item text-black px-0">
                                            Slušalice
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Components" asp-action="Index" asp-route-ComponentsTypesId="5" class="dropdown-item text-black px-0">
                                            Web kamere
                                        </a>
                                    </li>
                                </ul>
                             </div>
                        </li>

                        @if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="bi bi-gear"></i> UPRAVLJANJE
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" asp-controller="Laptops" asp-action="Index">
                                <i class="fas fa-laptop"></i> Laptopi
                            </a>
                            <a class="dropdown-item" asp-controller="Laptops" asp-action="GetAllPC">
                                <i class="fas fa-desktop"></i> Računari
                            </a>
                             <a class="dropdown-item" asp-controller="Components" asp-action="Index" asp-route-ComponentsTypesId="0">
                              <i class="fas fa-keyboard"></i> Komponente i oprema
                            </a>
                            </div>
                        </li>
                        }
                        
                    </ul>
                    @if (@Url.RouteUrl(ViewContext.RouteData.Values).Contains("Components"))
                    {
                        <form class="form-inline my-2 my-lg-0 search-form" asp-controller="Components" asp-action="Filter" style="padding-right: 25px; margin-left:auto;">
                            <input name="searchString" type="text" class="form-control" placeholder="Pretraga...">
                            <button class="btn btn-outline-dark my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
                        </form>
                    }
                    else
                    {
                        <form class="form-inline my-2 my-lg-0 search-form" asp-controller="Laptops" asp-action="Filter" style="padding-right: 25px; margin-left:auto;">
                            <input name="searchString" type="text" class="form-control" placeholder="Pretraga...">
                            <button class="btn btn-outline-dark my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
                        </form>
                    }

                    <ul class="navbar-nav">
                        @await Component.InvokeAsync(nameof(ShoppingCartSummary))
                    </ul>

                    <partial name="_Identity.cshtml" />

                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        @await Html.PartialAsync("_ContactUs")
    </div>
    <footer class="border-top footer text-muted text-center" style="line-height:30px">
        <div class="container">
            &copy; 2022 - OnlineShop
        </div>
    </footer>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
